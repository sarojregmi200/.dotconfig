# Improve the path variable and it's controll
# pnpm
export PNPM_HOME="/home/saroj/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac

# bun
export BUN_INSTALL="$HOME/.bun"

# deno
export DENO_INSTALL="/home/saroj/.deno"

# Adding common binary paths
local_bin="/home/saroj/.local/bin/"
global_bin="/bin/"
user_bin="/usr/bin/"
user_local_bin="/usr/local/bin/"

# Android studio PATH
export ANDROID_HOME=$HOME/Android/Sdk/
export GRADLE_HOME=/usr/bin/gradle

export PATH="$PATH:$local_bin:$global_bin:$user_bin:$user_local_bin:$BUN_INSTALL/bin:$ANDROID_HOME/emulator:$ANDROID_HOME/platform-tools:$GRADLE_HOME/bin:$HOME/.cargo/bin/:/home/saroj/.local/share/gem/ruby/3.0.0/bin:$DENO_INSTALL/bin"
